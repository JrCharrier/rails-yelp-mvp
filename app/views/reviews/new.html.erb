<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-lg border-0">
        <div class="card-header bg-dark text-white">
          <h4 class="mb-0">Leave a Review</h4>
        </div>
        <div class="card-body">
          <%= simple_form_for [@restaurant, @review], html: { class: "p-3" } do |f| %>
            <div class="mb-3">
              <%= f.input :rating, label_html: { class: "form-label fw-bold" }, input_html: { class: "form-control rounded-3" } %>
            </div>
            <div class="mb-3">
              <%= f.input :content, as: :text, label_html: { class: "form-label fw-bold" }, input_html: { class: "form-control rounded-3", rows: 4, placeholder: "Write your review here..." } %>
            </div>
            <div class="d-grid gap-2">
              <%= f.submit "Submit Review", class: "btn btn-primary btn-lg" %>
            </div>
          <% end %>
        </div>
        <div class="card-footer text-center">
          <%= link_to "Back to Restaurant", restaurant_path(@restaurant), class: "btn btn-outline-secondary" %>
        </div>
      </div>
    </div>
  </div>
</div>
