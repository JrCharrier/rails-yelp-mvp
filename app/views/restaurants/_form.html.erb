<%= simple_form_for(restaurant) do |f| %>
 <div class="mb-3">
    <%= f.input :name %>
  </div>
  <div class="mb-3">
    <%= f.input :address %>
  </div>
  <div class="mb-3">
   <%= f.input :phone_number %>
  </div>
  <div class="mb-3">
    <%= f.input :category, collection: Restaurant::CATEGORIES %>
  </div>
  <div class="mb-3">
    <%= f.submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
