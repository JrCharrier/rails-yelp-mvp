<%# <%= render "navbar" %>
<div class="container my-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <!-- Header avec style amélioré -->
      <h1 class="mb-5 text-center display-4 text-primary fw-bold">
        Discover Our Restaurants
      </h1>

      <!-- Restaurant Cards -->
      <% @restaurants.each do |restaurant| %>
        <div class="card mb-4 shadow border-0 rounded-3">
          <div class="card-body">
            <!-- Nom du restaurant avec style de lien amélioré -->
            <h5 class="card-title">
              <%= link_to restaurant.name, restaurant_path(restaurant), class: "text-decoration-none text-dark fw-bold" %>
            </h5>
            <p class="card-text text-muted">
              <%= restaurant.category.capitalize %> • <%= restaurant.address %>
            </p>

            <!-- Bouton d'action et badge stylisé -->
            <div class="d-flex justify-content-between align-items-center">
              <a href="<%= restaurant_path(restaurant) %>" class="btn btn-primary btn-sm">See Restaurant</a>
              <span class="badge bg-info text-dark"><%= restaurant.reviews.count %> Reviews</span>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Bouton Ajouter un nouveau restaurant -->
      <div class="text-center mt-4">
        <%= link_to "Add New Restaurant", new_restaurant_path, class: "btn btn-outline-success btn-lg fw-bold" %>
      </div>
    </div>
  </div>
</div>
